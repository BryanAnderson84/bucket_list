<%= form_for [@bucketlist, @item] do |f| %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <br>
    <%= f.label :category %>
    <%= f.text_field :category %>
    <br>
    <%= f.label :location %>
    <%= f.text_field :location %>
    <br>
    <%= f.label :completed, "Completed?" %>
    <%= f.check_box :completed %>
    <br>
    <%= f.submit class: "btn" %>
  <% end %>
